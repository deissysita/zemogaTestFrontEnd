{
  "compileOnSave": false,
  "compilerOptions": {
	"paths":{
		"crypto":["node_modules/crypto-browserify"],
		"http":["node_modules/stream-http"],
		"https":["node_modules/https-browserify"]
		},
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "module": "es2015"
  }
}